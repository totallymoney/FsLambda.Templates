{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["app/**/*", "lib/**/*"],
  "exclude": ["node_modules", "cdk.out"]
}
